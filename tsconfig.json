{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}